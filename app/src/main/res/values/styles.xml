<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="GlobalButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:layout_margin">15dp</item>
    </style>
    
    <style name="GlobalToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/gray</item>
        <item name="minHeight">?attr/actionBarSize</item>
    </style>
    
    <style name="RepoNameItemTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="RepoDescriptionItemTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>